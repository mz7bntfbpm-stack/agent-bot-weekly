# oder:version: '3.8' code docker-compose.yml services:
  openai-proxy:
cd ~/Downloads/openweb_rag/proxy

# docker-compose.yml reparieren (die "version" Warnung entfernen)
nano docker-compose.yml
# oder:
code docker-compose.yml
docker compose up -d

curl -fsSL https://opencode.ai/install | bash    build: .
    container_name: openai-proxy
    restart: unless-stopped
    ports:
      - "127.0.0.1:8000:8000"
    environment:
      - OPENAI_API_KEY=${OPENAI_API_KEY}
      - OPENAI_BASE_URL=${OPENAI_BASE_URL:-https://api.openai.com/v1}
      - PORT=8000
    healthcheck:
      test: ["CMD", "python", "-c", "import httpx; httpx.get('http://localhost:8000/health')"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 10s
